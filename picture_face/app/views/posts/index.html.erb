<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post), class: 'img' %><br>
    <%= post.caption %><br>

    <% rev_comments = [] %>
    <% post.comments.each do |comment| %>
    <% rev_comments << comment %>
    <% end %>
    <% rev_comments.reverse! %>
    <% rev_comments[0..3].each do |comment| %>
      <%= comment.comment %>
    <% end %>
    <%= link_to "Comment", new_post_comment_path(post) %>

  <% end %>
<% else %>
  <h1>No posts yet</h1>
<% end %>

<%= link_to 'Make a Post', new_post_path %>